---
import { Mail, MailCheck } from "lucide-react";
---

<a
  href="mailto:hello@marklyck.com"
  class="glow-effect flex items-center rounded-[18px] text-lg px-12 py-4 text-white"
  style={{
    border: "2px double transparent",
    backgroundImage:
      "linear-gradient(#09090B, rgb(13, 14, 33)), radial-gradient(circle at left top, rgb(1, 110, 218), rgb(217, 0, 192))",
    backgroundOrigin: "border-box",
    backgroundClip: "padding-box, border-box",
  }}
>
  <Mail className="mail-closed-icon mr-2 h-5 w-5" />
  <MailCheck className="mail-open-icon mr-2 h-5 w-5 hidden" />
  hello@marklyck.com
  <svg class="glow-container">
    <rect rx="18px" pathLength="100" stroke-linecap="round" class="glow-blur"
    ></rect>
    <rect rx="18px" pathLength="100" stroke-linecap="round" class="glow-line"
    ></rect>
  </svg>
</a>

<style>
  .glow-effect {
    /* do not change, used for calculations */
    --glow-container-offset: 100px;
    --glow-line-color: #fff;
    --glow-line-thickness: 2px;
    --glow-blur-color: #fff;
    --glow-blur-size: 6px;
    --animation-speed: 1200ms;
    position: relative;
    transition: all 0.2s;
  }

  .glow-effect:hover {
    transform: scale(1.02);
  }

  .glow-effect:hover .mail-closed-icon {
    display: none;
  }
  .glow-effect:hover .mail-open-icon {
    display: block;
  }

  .glow-container {
    pointer-events: none;
    position: absolute;
    inset: calc(var(--glow-container-offset) / -2);
    width: calc(100% + var(--glow-container-offset) + 8px);
    height: calc(100% + var(--glow-container-offset));
    opacity: 0;
  }

  .glow-line {
    stroke: var(--glow-line-color);
    stroke-width: var(--glow-line-thickness);
  }

  .glow-blur {
    filter: blur(var(--glow-blur-size));
    stroke: var(--glow-blur-color);
    stroke-width: var(--glow-blur-size);
  }

  .glow-blur,
  .glow-line {
    width: calc(100% - var(--glow-container-offset));
    height: calc(100% - var(--glow-container-offset));
    x: calc(var(--glow-container-offset) / 2);
    y: calc(var(--glow-container-offset) / 2);
    fill: transparent;
    stroke-dasharray: 20px 30px;
  }

  .glow-effect:is(:hover, :focus) :is(.glow-line, .glow-blur) {
    stroke-dashoffset: -80px;
    transition: stroke-dashoffset var(--animation-speed) ease-in;
  }

  .glow-effect:is(:hover, :focus) .glow-container {
    animation: glow-visibility ease-in-out var(--animation-speed);
  }

  @keyframes glow-visibility {
    0%,
    100% {
      opacity: 0;
    }
    25%,
    75% {
      opacity: 1;
    }
  }
</style>
