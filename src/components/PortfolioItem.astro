---
import { ArrowRight } from "lucide-react";
import { CardHeader, CardContent } from "./ui/card";
import Card from "@/components/ShinyCard.astro";

const { title, description, url, imgSrc } = Astro.props;
---

<a href={url} target="_blank" class="w-full max-w-[600px]">
  <Card className="group cursor-pointer">
    <CardHeader className="pb-0 space-y-0 relative">
      <h4 class="text-2xl">{title}</h4>
      <p class="text-secondary-foreground font-light mt-0">{description}</p>
      <div
        class="absolute p-2 top-1/2 right-4 -translate-y-1/2 group-hover:bg-zinc-900 rounded transition-colors duration-200"
      >
        <ArrowRight
          className="text-secondary-foreground group-hover:text-white transition-colors duration-200"
        />
      </div>
    </CardHeader>
    <CardContent className="p-4">
      <img
        alt={title}
        src={imgSrc}
        width={566}
        height={416}
        class="group-hover:rotate-1 portfolio-item-image w-full h-auto rounded transition-all duration-300"
      />
    </CardContent>
  </Card>
</a>
